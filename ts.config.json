{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./.vitepress/theme/*"]
    },
    "types": ["node"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false
  },
  "include": [
    "**/*.tsx",
    "**/*.mts",
    "**/*.ts",
    "**/*.vue",
    "**/.vitepress/**/*"
  ],
  "exclude": ["**/Snippet*","**/node_modules/**", "**/cache/**", "guide/**"]
}
